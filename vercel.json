{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/filters", "dest": "api/index.py" },
    { "src": "/search", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "env": {
    "VERCEL": "1"
  },
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 